#include "LedControl.h"

//LedControl variable = LedControl(int dataPin, int clkPin, int csPin, int numDevices);
LedControl lc = LedControl(2, 4, 3, 1);

void setup(){
  lc.shutdown(0, false);
  lc.setIntensity(0, 8); //maximum = 15
  lc.clearDisplay(0); 
}

void loop(){
  int directionX = 0;
  int directionY = random(8);
  int i=0, i2=directionY, count = 0;
      
  while(i < 8)
    {  
      lc.setLed(0, i, i2, HIGH);
      delay(300);
      lc.setLed(0, i, i2, LOW); 
        
      if(i2 == 7)
        {
          i2--;
          count++;
        }
      else if(count != 0)
        i2--; 
      else
        i2++;
        i++;
    }    
}
